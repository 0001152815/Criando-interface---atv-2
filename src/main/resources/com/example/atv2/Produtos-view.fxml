<AnchorPane fx:id="root" prefHeight="309.0" prefWidth="388.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.atv2.controller.produtosController">
   <children>
      <VBox alignment="CENTER_LEFT" layoutX="14.0" layoutY="72.0" prefHeight="196.0" prefWidth="213.0" spacing="10.0">
         <children>
            <Label text="Nome do produto:" />
            <TextField fx:id="txtNome" />
            <Label text="Preço do produto: " />
            <TextField fx:id="txtPreco" />
            <Button mnemonicParsing="false" onAction="#salvarProduto" style="-fx-background-color: #c21b98;" text="Salvar" textFill="WHITE" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" />
         </padding>
      </VBox>
      <TableView fx:id="tabelaProdutos" layoutX="227.0" layoutY="72.0" prefHeight="196.0" prefWidth="296.0">
        <columns>
          <TableColumn fx:id="colId" prefWidth="75.0" text="Id" />
          <TableColumn fx:id="colNome" minWidth="0.0" prefWidth="75.0" text="Nome" />
            <TableColumn fx:id="colPreco" prefWidth="148.0" text="Preço" />
        </columns>
      </TableView>
      <Label layoutY="-2.0" prefHeight="25.0" prefWidth="525.0" style="-fx-background-color: #c21b98;" text="Tela de Produtos" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
